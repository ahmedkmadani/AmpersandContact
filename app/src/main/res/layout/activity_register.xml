<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:fitsSystemWindows="true"
            android:background="#f4f4f0">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   android:layout_marginBottom="8dp"
                   android:background="#eeeeee"
                   android:layout_gravity="center_horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_user" android:id="@+id/imageView3"
                    android:layout_weight="1"
                    android:layout_marginTop="51dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="157dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="157dp"
                    android:layout_marginStart="158dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="158dp" android:layout_marginBottom="84dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ff3c54"
                    tools:text="ADD PROFILE PHOTO"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:layout_marginEnd="127dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="127dp"
                    android:layout_marginStart="128dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="128dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="110dp" android:layout_marginBottom="56dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp">
            <EditText android:id="@+id/input_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textEmailAddress"
                      android:hint="Full Name"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp">
            <EditText android:id="@+id/input_email"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textEmailAddress"
                      android:hint="Email"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp">
            <EditText android:id="@+id/input_password"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textPassword"
                      android:hint="Password"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp">
            <EditText android:id="@+id/input_phone"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textPhonetic"
                      android:hint="Phone Number"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp">
            <EditText android:id="@+id/input_role"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textPersonName"
                      android:hint="Role"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp">
            <EditText android:id="@+id/input_twitter"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Twitter"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp">
            <EditText android:id="@+id/input_linkedln"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Linkedln"
                      android:textSize="15sp"
                      android:lineHeight="25sp"
                      android:textColor="#4a4a4a"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/btn_background"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:text="REGISTER"
        />

    </LinearLayout>
</ScrollView>