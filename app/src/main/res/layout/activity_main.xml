<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f0"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="148dp"
            android:layout_height="33dp"
            app:srcCompat="@mipmap/logo_red"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="134dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="114dp"
            android:layout_marginLeft="98dp" android:layout_marginBottom="473dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="AMPERSAND CONTACTS"
            android:textSize="18sp"
            android:lineHeight="30sp"
            android:layout_width="184dp"
            android:layout_height="60dp"
            android:textColor="#4c4d4f"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_marginStart="81dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="81dp"
            android:layout_marginEnd="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="95dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="277dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="68dp"
            android:layout_height="3dp"
            android:background="#c15837"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="154dp"
            android:layout_marginEnd="154dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="138dp"
            android:layout_marginStart="138dp"
            app:layout_constraintHorizontal_bias="0.647"
            android:layout_marginBottom="96dp" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/view"/>
    <TextView
            android:text="GET STARTED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_start"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="127dp" android:layout_marginStart="127dp" android:layout_marginTop="537dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/view"/>

</android.support.constraint.ConstraintLayout>